#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/mzc01-swlee/dev/repository/github/claude-code/wireframe-lang/node_modules/.pnpm/vitest@3.2.4_@types+node@22.19.3_jiti@2.6.1_lightningcss@1.30.2_tsx@4.21.0/node_modules/vitest/node_modules:/Users/mzc01-swlee/dev/repository/github/claude-code/wireframe-lang/node_modules/.pnpm/vitest@3.2.4_@types+node@22.19.3_jiti@2.6.1_lightningcss@1.30.2_tsx@4.21.0/node_modules:/Users/mzc01-swlee/dev/repository/github/claude-code/wireframe-lang/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/mzc01-swlee/dev/repository/github/claude-code/wireframe-lang/node_modules/.pnpm/vitest@3.2.4_@types+node@22.19.3_jiti@2.6.1_lightningcss@1.30.2_tsx@4.21.0/node_modules/vitest/node_modules:/Users/mzc01-swlee/dev/repository/github/claude-code/wireframe-lang/node_modules/.pnpm/vitest@3.2.4_@types+node@22.19.3_jiti@2.6.1_lightningcss@1.30.2_tsx@4.21.0/node_modules:/Users/mzc01-swlee/dev/repository/github/claude-code/wireframe-lang/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../vitest/vitest.mjs" "$@"
else
  exec node  "$basedir/../vitest/vitest.mjs" "$@"
fi
